<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@drawable/starting_gradient"
              android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true">
    <ImageView
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:id="@+id/intro_image"
        android:layout_centerHorizontal="true"
        android:scaleType="center"
        android:src="@drawable/app_icon_white"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/intro_title"
        android:layout_below="@+id/intro_image"
        android:text="Sveiki prisijungę!"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:textColor="#fff"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/intro_description"
        android:text="Prisiūk antraštę - tai aplikacija, kuri taip jūsų geriausiu draugu skaitant naujienas"
        android:gravity="center"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:textSize="19dp"
        android:layout_marginTop="30dp"
        android:textColor="#fff"
        android:layout_below="@+id/intro_title"
        />

</RelativeLayout>

</RelativeLayout>