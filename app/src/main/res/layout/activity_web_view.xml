<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_web_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mabe.productions.prisiukantraste.WebViewActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/webview_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFF"
        android:elevation="4dp"
        android:theme="@style/AppThemeBar"
        app:popupTheme="@style/AppThemeBar">


        <ImageView
            android:layout_width="25dp"
            android:layout_gravity="left"
            android:layout_height="30dp"
            android:id="@+id/webview_back_icon"
            android:src="@drawable/ic_left_icon"/>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:background="@drawable/app_icon_black_single_patch"
                android:layout_gravity="right"
                android:id="@+id/add_title_from_webview"
                android:layout_marginRight="15dp"
                />




        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:id="@+id/webview_txt"
            android:layout_gravity="left"
            android:layout_marginLeft="40dp"
            android:textSize="20dp"
            android:text="Nustatymai"/>

    </android.support.v7.widget.Toolbar>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/webview">

    </WebView>

</RelativeLayout>
